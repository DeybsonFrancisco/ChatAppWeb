<script>
    Notification.requestPermission()
    const redirect = (element, link) =>{
        element.addEventListener('input', () =>{
            const url = window.location.href
            console.log(url)
            const roomName = element.value
            link.setAttribute('href', `${url}chat?room=${roomName}`)
        
        })

    }
        const linkCreateRoom = document.getElementById("link-create-room-name")
        const inputCreteRoom = document.getElementById("input-create-room-name")
        
        redirect(inputCreteRoom, linkCreateRoom)

        const linkJoinRoom = document.getElementById("link-join-room-name")
        const inputJoinRoom = document.getElementById("input-join-room-name")

        redirect(inputJoinRoom, linkJoinRoom)

</script>


